         <file role="doc" name="exsource_vs_pear_PHP_CompatInfo_docs_examples_parseFile.php_27ad3b8bc4838da6b47b9de1c1fece60.html"/>
         <file role="doc" name="exsource__pear_PHP_CompatInfo_docs_examples_parseFolder.php_59cd49894862a7adc29626160d3ccca8.html"/>
         <file role="doc" name="exsource__pear_PHP_CompatInfo_docs_examples_parseString.php_d7f0c50630c16cc0494bef419d036b25.html"/>
        </dir> <!-- docs/__examplesource -->
        <dir name="__filesource">
         <file role="doc" name="fsource_PHP_CompatInfo__CompatInfo.php.html"/>
        </dir> <!-- docs/__filesource -->
       </dir> <!-- docs -->
       <dir name="scripts">
        <file role="data" name="create_array.xsl"/>
        <file role="data" name="functions.xml"/>
        <file role="data" name="versions.xml"/>
       </dir> <!-- scripts -->
       <file role="php" name="CompatInfo.php"/>
      </dir> <!-- / -->
    </filelist>
  </release>
